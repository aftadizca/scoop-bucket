    "extract_to": "_tmp",
    "installer": {
        "script": [
            "$d = Get-ChildItem -Path \"$dir\\_tmp\"",
            "Move-Item \"$($d[0].FullName)\\*\" \"$dir\"",
            "Remove-Item \"$dir\\_tmp\" -Recurse",
            "$file = 'RoomListConfig.json'",
            "if (!(Test-Path \"$persist_dir\\$file\")) {",
            "    New-Item \"$persist_dir\\$file\" -Type File -Value \"{}\" | Out-Null",
            "}"
        ]
    },
    "persist": "RoomListConfig.json",
    "shortcuts": [
        [
            "DDTV_New.exe",
            "DDTV2"
        ]
    ],
    "checkver": {
        "url": "https://github.com/CHKZL/DDTV2/releases/latest",
        "regex": "/releases/tag/Ver([\\w\\.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/CHKZL/DDTV2/releases/download/Ver$version/DDTV-$version.rar"
    }
}
