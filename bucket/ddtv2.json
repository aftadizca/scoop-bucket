    "hash": "c4717837f96af2ba6e878f6b4ccc1dea83c2fd79e87da0f4f0fadfa0549aef4c",
    "extract_to": "_tmp",
    "installer": {
        "script": [
            "$d = Get-ChildItem -Path \"$dir\\_tmp\"",
            "$d = Get-ChildItem -Path \"$($d[0].FullName)\"",
            "Move-Item \"$($d[0].FullName)\\*\" \"$dir\"",
            "Remove-Item \"$dir\\_tmp\" -Recurse",
            "$file = 'RoomListConfig.json'",
            "if (!(Test-Path \"$persist_dir\\$file\")) {",
            "    New-Item \"$persist_dir\\$file\" -Type File -Value \"{}\" | Out-Null",
            "}"
        ]
    },
    "persist": [
        "RoomListConfig.json"
    ],
    "shortcuts": [
        [
            "DDTV_New.exe",
            "DDTV2"
        ]
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/CHKZL/DDTV2/releases/download/$version/DDTV-$version.rar"
    }
}
